# Domain for SSL certificate renewal
DOMAIN=slackbot.kamayie.org

# Email for Let's Encrypt notifications (required)
EMAIL=admin@example.com

# Use staging server for testing (set to 'true' for testing, 'false' for production)
STAGING=true

# Request a completely new certificate (ignores existing certs and expiration checks)
NEW_CERT=false

# Force renewal even if certificate is still valid for more than 30 days
FORCE_RENEW=false
